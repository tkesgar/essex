{
  "name": "tkesgar.com",
  "version": "2.0.1",
  "description": "Personal website repository",
  "private": true,
  "author": "Ted Kesgar <t.kesgar@live.com> (https://tkesgar.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tkesgar/tkesgar.com.git"
  },
  "homepage": "https://github.com/tkesgar/tkesgar.com#readme",
  "scripts": {
    "dev": "next",
    "build": "next build && next export",
    "start": "serve out",
    "lint": "xo"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "next": "^7.0.2",
    "normalize.css": "^8.0.1",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "sharo-scripts": "^0.6.1"
  },
  "devDependencies": {
    "husky": "^1.2.0",
    "serve": "^10.1.1",
    "xo": "^0.23.0"
  },
  "babel": {
    "presets": [
      [
        "next/babel",
        {
          "styled-jsx": {
            "plugins": [
              "styled-jsx-plugin-postcss"
            ]
          }
        }
      ]
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-preset-env": {}
    }
  },
  "xo": {
    "extends": [
      "xo-react"
    ],
    "parser": "babel-eslint",
    "space": 2,
    "semicolon": false,
    "settings": {
      "react": {
        "version": "16.7.0"
      },
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".mdx",
            ".scss"
          ]
        }
      }
    }
  },
  "stylelint": {
    "extends": [
      "sharo-scripts/stylelint"
    ]
  }
}
